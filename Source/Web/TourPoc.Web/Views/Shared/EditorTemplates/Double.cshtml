@model System.Double?

<div class="form-group">
    @Html.LabelFor(m => m, new { @class = "control-label" })
    @Html.TextBoxFor(m => m, new { @class = "form-control", placeholder = ViewData.ModelMetadata.DisplayName, type = "number" })
    @Html.ValidationMessageFor(model => model, null, new { @class = "text-danger" })
</div>